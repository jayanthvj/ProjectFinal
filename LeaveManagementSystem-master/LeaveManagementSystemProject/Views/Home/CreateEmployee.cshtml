@model LeaveManagementSystemProject.Models.EmployeeModel

@{
    ViewBag.Title = "CreateEmployee";
}

<h2>CreateEmployee</h2>
@using (Html.BeginForm("CreateEmployee", "Home", FormMethod.Post))
{
    <table cellpadding="10">
        
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeeName)</td>
            <td>@Html.EditorFor(Model => Model.EmployeeName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeePhoneNumber)</td>
            <td>@Html.EditorFor(Model => Model.EmployeePhoneNumber)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeeEmail)</td>
            <td>@Html.EditorFor(Model => Model.EmployeeEmail)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.EmployeeAge)</td>
            <td>@Html.EditorFor(Model => Model.EmployeeAge)</td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model=>model.Department)
            </td>
            <td>
                @Html.DropDownListFor(model=>model.DepartmentId,(IEnumerable<SelectListItem>)ViewBag.Departments,"Choose department")
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Manager)
            </td>
            <td>
                @Html.DropDownListFor(model => model.ManagerId, (IEnumerable<SelectListItem>)ViewBag.Managers, "Choose Manager")
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Designation)
            </td>

            <td>
                @Html.DropDownListFor(model => model.DesignationId, (IEnumerable<SelectListItem>)ViewBag.Designations, "Choose designation")
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "Index")
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>
    </table>
}

